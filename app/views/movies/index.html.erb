<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      
      <%= link_to "Show this movie", movie, class:"card-link custom-link" %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path, class:"custom-link" %>
